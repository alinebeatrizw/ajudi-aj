

 <title>AJUDI - Agenda</title>

{{#if user}}
<!-- card que mostra os eventos-->
 {{#each eventos}}
     <div  class="draggable resizable card bg-light mb-3" >
       <div class="botoes-postit" style="background-color: #f0f1f2;">
            <form action="/agenda/deletar" method="POST" style="background-color: #f0f1f2;">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="close" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
            </form>  
            <a href="/agenda/editar/{{_id}}">
                <button  type="submit" class='fas fa-edit' style='color: #949495; border: none;'></button>
            </a>
       </div>           
        <div class="card-header">{{nomeEvento}}</div>   
        <div class="card-body">
            Data: {{dataInicio}}<br>
            Hora: {{horaEvento}}
        </div>   
    </div> 
 {{/each}}


<!-- calendario -->
<body onload="renderDate()">
    <div class="calendario-todo">
        <div class="calendario">
          <form action="/agenda/gerarTotal" method="POST" style="background-color: #dfe6e9;">
             <div class="linha-gerar-relatorio">
                <button type="submit" class="botao-relatorio" >
                Gerar Relatório Total de Agendamentos 
              </button>
             </div>
            </form>
            <form action="/agenda/gerarPorAno" method="POST" style="background-color: #dfe6e9;">
             <div class="linha-gerar-relatorio">
                <button type="submit" class="botao-relatorio" >
                Gerar Relatório de Agendamentos por Ano:
              </button>
               <select name="anoSelecionado" id="anoSelecionado" class="selectAno">
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
                <option value="2025">2025</option>
                <option value="2026">2026</option>
                <option value="2027">2027</option>
                <option value="2028">2028</option>
                <option value="2029">2029</option>
                <option value="2030">2030</option>
              </select>
             </div>
            </form>
            <div class="mes">
                <div class="anterior" onclick="mudarMes('anterior')">
                    <span>&#10094;</span>
                </div>
                
                <div>
                    <h2 id="mes"></h2>
                    <p id="date_str"></p>
                </div>
                <div class="proximo" onclick="mudarMes('proximo')">
                    <span>&#10095;</span>
                </div>
            </div>
            <div class="dias-semana">
                <div>Domingo</div>
                <div>Segunda</div>
                <div>Terça</div>
                <div>Quarta</div>
                <div>Quinta</div>
                <div>Sexta</div>
                <div>Sábado</div>
            </div>
            <div class="dias" onclick="formAddEvento()">
            </div>
        </div>
    </div>
<div id="myModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
            Adicionar Evento
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/agenda/novo-evento" method="POST">
            <div class="form-group row">
                    <div class="col-sm-10">
                        <label for="nomeEvento" class=" col-form-label col-form-label-sm">Nome do Evento:</label>
                        <input type="text" class="form-control form-control-sm" id="nomeEvento" name="nomeEvento">
                    </div>
                    <div class="col-sm-10 mt-3">
                        <label for="dataInicio" class=" col-form-label col-form-label-sm">Data:</label>
                        <input type="text" class="form-control form-control-sm" id="dataInicio " name="dataInicio" oninput="mascaraDataNascimento(this)" >
                    </div>
                    <div class="col-sm-10 mt-3">
                        <label for="horaEvento" class=" col-form-label col-form-label-sm">Hora:</label>
                        <input type="text" class="form-control form-control-sm "  name="horaEvento" oninput="mascaraHoraEvento(this)">
                    </div> 
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-dark mt-3">Salvar</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>



{{else}}
 <style >
        .ct-footer{
            position: absolute !important;
        }
        html{
          background-color: #19202c;
        }
    </style>
<h4 class="mt-4" style="color:#fff">Você precisa estar logado para acessar!</h4>
{{/if}}





