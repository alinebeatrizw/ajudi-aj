
    <style>
        .calendario-todo {
            display: flex;
        }

        .calendario {
            margin: auto;
            width: 600px;
            background-color: #fff;
            box-shadow: 0px 0px 15px 4px rgba(0, 0, 0, 0.2);
        }

        .mes{
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 40px 30px;
            text-align: center;
            background-color: #dfe6e9;
            color: #fff;
        }

        .dias-semana {
            background-color: #b3b2b2;
            color: #fff;
            padding: 7px 0;
            display: flex;
        }

        .dias {
            font-weight: 300;
            padding: 10px 0;
            display: flex;
            flex-wrap: wrap;
        }

        .dias-semana div,
        .dias div {
            text-align: center;
            width: 14.28%;
        }

        .dias div {
            padding: 10px 0;
            margin-bottom: 10px;
            transition: all 0.4s;
        }

        .prev_date {
            color: #999;
        }

        .hoje {
            background-color: #b3b2b2;
            color: #fff;
        }

        .dias div:hover {
            cursor: pointer;
            background-color: #dfe6e9;
        }

        .anterior,
        .proximo {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            font-size: 23px;
            transition: all 0.4s;
        }

        .anterior:hover,
        .proximo:hover {
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.2);
        }

        #mes {
            font-size: 30px;
            font-weight: 500;
        }
    </style>


<body onload="renderDate()">
    <div class="calendario-todo">
        <div class="calendario">
            <div class="mes">
                <div class="anterior" onclick="mudarMes('anterior')">
                    <span>&#10094;</span>
                </div>
                <div>
                    <h2 id="mes"></h2>
                    <p id="date_str"></p>
                </div>
                <div class="proximo" onclick="mudarMes('proximo')">
                    <span>&#10095;</span>
                </div>
            </div>
            <div class="dias-semana">
                <div>Domingo</div>
                <div>Segunda</div>
                <div>Terça</div>
                <div>Quarta</div>
                <div>Quinta</div>
                <div>Sexta</div>
                <div>Sábado</div>
            </div>
            <div class="dias" onclick="formAddEvento()">
            
            </div>
        </div>
    </div>




<div id="myModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
            Adicionar Evento
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/agenda/novo-evento" method="POST">
            <div class="form-group row">
               
                    <div class="col-sm-10">
                        <label for="nomeEvento" class=" col-form-label col-form-label-sm">Nome do Evento:</label>
                        <input type="text" class="form-control form-control-sm" id="nomeEvento" name="nomeEvento">
                    </div>
                    <div class="col-sm-10 mt-3">
                        <label for="dataInicio" class=" col-form-label col-form-label-sm">Data de Início:</label>
                        <input type="date" class="form-control form-control-sm" id="dataInicio" name="dataInicio">
                    </div>
                    <div class="col-sm-10 mt-3">
                        <label for="dataFim" class=" col-form-label col-form-label-sm">Data de Término:</label>
                        <input type="date" class="form-control form-control-sm" id="dataFim" name="dataFim">
                    </div>
                    <div class="col-sm-10">
                        <label for="descricaoEvento" class=" col-form-label col-form-label-sm">Descrição do Evento:</label>
                        <textarea class="form-control form-control-sm" id="descricaoEvento" name="descricaoEvento" >
                        </textarea>
                    </div>
                    <div class="col-sm-10">
                        <label for="cor" class=" col-form-label col-form-label-sm">Cor:</label>
                        <input type="color" class="form-control form-control-sm" id="cor" name="cor">
                    </div>
            </div>
            <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Salvar</button>
      </div>
        </form>
      </div>
      
    </div>
  </div>
</div>


    <script>



function formAddEvento() {
  $("#myModal").modal({
    show: true
  });
}


        var data = new Date();
        function renderDate() {
            data.setDate(1);
            var dia = data.getDay();
            var hoje = new Date();
            var endDate = new Date(
                data.getFullYear(),
                data.getMonth() + 1,
                0
            ).getDate();

            var prevDate = new Date(
                data.getFullYear(),
                data.getMonth(),
                0
            ).getDate();
            var meses = [
                "Janeiro",
                "Fevereiro",
                "Março",
                "Abril",
                "Maio",
                "Junho",
                "Julho",
                "Agosto",
                "Setembro",
                "Outubro",
                "Novembro",
                "Dezembro"
            ]
            document.getElementById("mes").innerHTML = meses[data.getMonth()];
            document.getElementById("date_str").innerHTML = data.getFullYear();
            


            var blocoDia = "";
            for (x = dia; x > 0; x--) {
                blocoDia += "<div class='prev_date'>" + (prevDate - x + 1) + "</div>";
            }
            
            for (i = 1; i <= endDate; i++) {
                if (i == hoje.getDate() && data.getMonth() == hoje.getMonth()) blocoDia += "<div class='hoje'>" + i + "</div>";
                else
                    blocoDia += "<div>" + i + "</div>";
            }
            document.getElementsByClassName("dias")[0].innerHTML = blocoDia;

        }

        function mudarMes(para) {
            if(para == "anterior") {
                data.setMonth(data.getMonth() - 1);
            } else if(para == 'proximo') {
                data.setMonth(data.getMonth() + 1);
            }
            renderDate();
        }
    </script>
